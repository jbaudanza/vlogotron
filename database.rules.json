{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "displayName": {
          ".read": true
        }
      }
    },
    "songs": {
      "$songId": {
        ".read": "!data.child('deletedAt').exists() && (data.child('visibility').val() === 'everyone' || data.child('uid').val() === auth.uid)",
        ".write": "data.exists() ? (data.child('uid').val() === auth.uid) : (auth != null)",
        ".validate": "newData.child('uid').val() === auth.uid"
      }
    },
    "video-clips": {
      "$videoClipId": {
        ".read": true,
        ".write": "data.exists() ? (data.child('uid').val() === auth.uid) : (auth != null)",
        ".validate": "newData.child('uid').val() === auth.uid"
      }
    }
  }
}